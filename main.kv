<MainScreen>:
    name: 'main'

    FloatLayout:
        size_hint: None, None

    Slider:
        id: sheep
        min: 0
        max: 100
        step: 1
        orientation: "horizontal"
        y: root.height * .3
        color: 0, 0, 0, 1


    DPEAButton:
        id: test_button
        text: "Off" if test_button.state == "normal" else "On"
        size: 100, 100
        x: root.width * 0.65
        y: root.height * 0.5
        color: 0, 1, 0, 1
        #on_press: root.pressed()

    DPEAButton:
        text: "Click Me: " + root.label_text
        size: 250, 100
        x: root.width * 0.15
        y:root.height * 0.5
        color: 1, 0, 0, 1
        on_press: root.increment()

    DPEAButton:
        id: chicken
        text: "Motor Switch"
        size: 200, 100
        x: root.width * 0.5
        y: root.height * 0.2
        color: 1, 0, 0, 1
        on_press: root.motor()

    Label:
        id: cow
        text: "Motor Off" if root.braedan else "Motor On"
        size: 200, 100
        x: root.width * 0.4
        y: root.height * -.2
        color: 1, 0, 0, 1


    Label:
        text: str(sheep.value)
        size: 400, 400
        x: root.width * .2
        y: root.height * .25
        color: 1, 0, 0, 1

    ImageButton:
        id: goat
        source: "Goat.jpg"
        size: 100, 100
        x: root.width * .3
        y: root.height * .3
        on_press: root.clicked()



